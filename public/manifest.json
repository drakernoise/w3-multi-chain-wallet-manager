{
  "manifest_version": 3,
  "name": "Web3 Multi-Chain Wallet",
  "version": "1.0.4",
  "description": "A multi-chain (Hive, Steem, Blurt) wallet extension with multisig, bulk transfers, and AI-powered transaction analysis.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Web3 Multi-Chain Wallet",
    "default_icon": {
      "16": "logowallet.png",
      "48": "logowallet.png",
      "128": "logowallet.png"
    }
  },
  "icons": {
    "16": "logowallet.png",
    "48": "logowallet.png",
    "128": "logowallet.png"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "windows"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/provider.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/provider.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}